{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Aspect Ratios in Czech Railway Traffic Light Dataset (Regression)",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "middle",
    "dy": -10
  },
  "data": {
    "values": []
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "x": {
          "field": "timestamp in video",
          "type": "quantitative",
          "title": "Timestamp in Video",
          "scale": {
            "domain": [
              0,
              10000
            ]
          }
        },
        "y": {
          "field": "aspect ratio",
          "type": "quantitative",
          "title": "Aspect Ratio",
          "scale": {
            "domain": [
              0,
              0.6
            ]
          }
        },
              "color": {
          "field": "color",
          "type": "nominal",
          "scale": {
            "domain": [
              "red",
              "green",
              "yellow"
            ],
            "range": [
              "red",
              "green",
              "orange"
            ]
          },
          "legend": {
            "title": "Colors"
          }
        },
         "tooltip": [
          {"field": "video name", "type": "nominal", "title": "Video Name"},
          {"field": "timestamp in video", "type": "quantitative", "title": "Timestamp in Video"},
          {"field": "aspect ratio", "type": "quantitative", "title": "Aspect Ratio"}
        ]
      }
    },

    {
      "mark": {
        "type": "line",
        "strokeWidth": 1.5
      },
      "transform": [
        {
          "regression": "aspect ratio",
          "on": "timestamp in video",
          "method": "linear"
        }
      ],
      "encoding": {
        "x": {
          "field": "timestamp in video",
          "type": "quantitative"
        },
        "y": {
          "field": "aspect ratio",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    }
  ]
}